<?php

include "vendor/autoload.php";

use Colors\Color;

use DTail\DTail;
use DTail\CLI;

$options = getopt("f:");

$file = $options['f'];

$config = include $file;

$dtail = new DTail($config);
$iterator = $dtail->get('PHPErrorReporter');

printf(
    CLI::formatString, 
    "Channel",
    "Date Time",
    "Level",
    "Message",
    "Context"
);

CLI::run($iterator);


